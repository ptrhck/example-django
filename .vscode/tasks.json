{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Test: All",
        "type": "shell",
        "command": "./pants test ::",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Test: Affected",
        "type": "shell",
        "command": "./pants --changed-since=HEAD --changed-dependees=transitive test",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Test: Watch current",
        "type": "shell",
        "command": "./pants --loop test ${file}",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Test: Debug current",
        "type": "shell",
        "command": "./pants --debug test ${file}",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Format: Watch current",
        "type": "shell",
        "command": "./pants --loop fmt ${file}",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Lint: Watch current",
        "type": "shell",
        "command": "./pants --loop lint ${file}",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
  }